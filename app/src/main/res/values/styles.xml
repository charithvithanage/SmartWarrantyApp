<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="content_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondoryTextColor</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="list_view_lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="list_view_content_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondoryTextColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="title_text_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="login_edit_text_style" parent="android:Widget.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textStyle">normal</item>

    </style>

    <style name="login_btn_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="action_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">normal</item>
    </style>

  <style name="edit_text_error_lable_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="nav_menu_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_title_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="dialog_content_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/secondoryTextColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
<!--        <item name="android:windowFullscreen">true</item>-->
        <item name="android:background">@mipmap/splash_new</item>
    </style>

    <style name="select_btn_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/charcoal</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="deselect_btn_style" parent="android:Widget.Button">
        <item name="android:textColor">@color/platinum</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_view_item_style" parent="android:Widget.TextView">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">200</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


</resources>

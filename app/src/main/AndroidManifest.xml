<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.info.charith.smartwarrantyapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launch"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".Activities.Splash"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.DealerSearchActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name=".Activities.PlainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.MessageActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.DeivceInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.NewDeiveActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.ScannerActivity"
            android:theme="@style/AppTheme.NoActionBar" /> <!-- <activity android:name=".ui.ScanActivity"></activity> -->
        <activity
            android:name=".Activities.DealerInfoActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity
            android:name=".Activities.SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Activities.LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>

        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="84f48e1fd1a4aee92ecfcd9c7ae40e5cd7a57ea3" />


        <!--This goes inside the application tags-->
        <!--This is the receiver you called when the alarm was executed-->
        <receiver android:name="AlarmBroadcaster" />

        <receiver
            android:name="SampleBootReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED"></action>
            </intent-filter>
        </receiver>

        <service
            android:name="NotificationTrigger"
            android:exported="false" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    //You need the wake lock so the phone can be activated
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    //You need the permision to set the alarm
    <uses-permission android:name="com.info.charith.smartwarrantyapp.alarm.permission.SET_ALARM" />
    //And you need the permision to listen the boot
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
</manifest>